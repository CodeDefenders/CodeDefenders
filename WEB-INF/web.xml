<web-app>

	<servlet>
		<servlet-name>loginManager</servlet-name>
		<servlet-class>gammut.LoginManager</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginManager</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>gameSelectionManager</servlet-name>
		<servlet-class>gammut.GameSelectionManager</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>gameSelectionManager</servlet-name>
		<url-pattern>/games</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>gameManager</servlet-name>
		<servlet-class>gammut.GameManager</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>gameManager</servlet-name>
		<url-pattern>/play</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>introPage</servlet-name>
		<servlet-class>gammut.IntroPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>introPage</servlet-name>
		<url-pattern>/intro</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>attackPage</servlet-name>
		<servlet-class>gammut.AttackerPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>attackPage</servlet-name>
		<url-pattern>/attacker</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>defenderPage</servlet-name>
		<servlet-class>gammut.DefenderPage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>defenderPage</servlet-name>
		<url-pattern>/defender</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>score</servlet-name>
		<servlet-class>gammut.ScorePage</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>score</servlet-name>
		<url-pattern>/scores</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>updateClasses</servlet-name>
		<servlet-class>gammut.UpdateAvailableClasses</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateClasses</servlet-name>
		<url-pattern>/updateclasses</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>user_games_view.jsp</servlet-name>
	    <jsp-file>/html/user_games_view.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	    <servlet-name>user_games_view.jsp</servlet-name>
	    <url-pattern>/games/user</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>all_games_view.jsp</servlet-name>
	    <jsp-file>/html/all_games_view.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	    <servlet-name>all_games_view.jsp</servlet-name>
	    <url-pattern>/games/all</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>create_game_view.jsp</servlet-name>
	    <jsp-file>/html/create_game_view.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	    <servlet-name>create_game_view.jsp</servlet-name>
	    <url-pattern>/games/create</url-pattern>
	</servlet-mapping>

	<filter>
	   <filter-name>loginFilter</filter-name>
	   <filter-class>gammut.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
	   <filter-name>loginFilter</filter-name>
	   <url-pattern>/intro</url-pattern>
	</filter-mapping>

</web-app>