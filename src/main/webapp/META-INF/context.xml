<?xml version="1.0" encoding="UTF-8"?>
<Context>
	<!-- The values in this file are filled with the values from the config.properties file -->

	<Resource
		name="jdbc/codedefenders" type="javax.sql.DataSource"
		
		maxTotal="200"
		maxWaitMillis="1000"
		
		driverClassName="com.mysql.jdbc.Driver"
		url="${db.url}"
		username="${db.username}"
		password="${db.password}" />

	<Environment
		name="data.dir"
		type="java.lang.String"
		value="${data.dir}" />

	<Environment
		name="ant.home"
		type="java.lang.String"
		value="${ant.home}" />

	<Environment
		name="cluster.mode"
		type="java.lang.String"
		value="${cluster.mode}" />
		
	<Environment
		name="cluster.java.home"
		type="java.lang.String"
		value="${cluster.java.home}" />
		
	<Environment
		name="cluster.timeout"
		type="java.lang.String"
		value="${cluster.timeout}" />
		
	<Environment
		name="cluster.reservation.name"
		type="java.lang.String"
		value="${cluster.reservation.name}" />
	
	<Environment
		name="parallelize"
		type="java.lang.String"
		value="${parallelize}" />
		
	<Environment
		name="forceLocalExecution"
		type="java.lang.String"
		value="${forceLocalExecution}" />

	<Environment
			name="mutant.coverage"
			type="java.lang.String"
			value="${mutant.coverage}" />
			
</Context>
